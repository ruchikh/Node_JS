<!DOCTYPE html>
<html>
  <head>
    <title><%= 'blog' %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
    <body>

      <%- include partial/header.ejs %>
      <div class="article-page border">
        <h1 class="article"><%= article.title %></h1>
        <p>Tags: <%= article.tags %></p>
        <p><%= article.description %></p>
        <a href="/posts/<%= article.id %>/delete"><i class="far fa-trash-alt"></i></a>
        <a href="/posts/<%= article.id %>/edit"><i class="material-icons fas fa-marker"></i></a>

        <div class="">
          <% for(var i=0; i < article.comments.length; i++) { %>
            <h2 class="comment-heading"><%= article.comments[i].title %></h1>
            <a href="/posts/<%= article.comments[i]._id %>/comment/delete/"><i class="far fa-trash-alt"></i></a>
            <a href="/posts/<%= article.comments[i]._id %>/comment/edit/"><i class="material-icons fas fa-marker"></i></a>
          <% } %>
        </div>
        <div>
          <p>comment here....</p>
          <% if(article) { %>
           <form action="/posts/<%= article._id %>/comment" method="POST" >
              <textarea name="title" rows="5" cols="50" placeholder="write comment here..."></textarea>
              <input type="hidden" name="postId" value="<%= article._id %>"><br>
              <button class="submit">submit</button>
            </form>
          <% } %>   
        </div>
      </div>
    </body>
</html>
